<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.classactivity.ClassActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#F2F2F2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="318dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="100dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.854"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.158"
                    app:srcCompat="@drawable/notification" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="31dp"
                    android:layout_height="42dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="@+id/textView8"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:srcCompat="@drawable/ic_idea" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="Class Content"
                    android:textColor="@android:color/black"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="17dp"
                    android:gravity="left"
                    android:includeFontPadding="false"
                    android:text="@string/class_subtitle"
                    android:textColor="@android:color/black"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintStart_toStartOf="@+id/textView"
                     />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="10dp"
                    android:layout_height="12dp"
                    android:background="@drawable/notificationshower"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="7dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.905"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.192" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:text="@string/class_tab1"
                android:textSize="11sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_tab2"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView49"
                app:layout_constraintStart_toEndOf="@+id/textView49"
                app:layout_constraintTop_toTopOf="@+id/textView49" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userimag"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/profile_person_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView49" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_username"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_bold"
                android:textSize="28sp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/userimag" />
            <TextView
                android:id="@+id/textView63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_username_sub"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp"
                android:includeFontPadding="false"
                android:textColor="@color/txt_sub_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView62" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="160dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_shape_class2"
                android:gravity="center"
                android:paddingRight="4dp"
                android:text="12            "
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView63"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/textVie"
                android:layout_width="80dp"
                android:paddingLeft="16dp"
                android:layout_height="0dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@id/textView3"
                app:layout_constraintBottom_toBottomOf="@id/textView3"
                android:textAlignment="textStart"
                android:background="@drawable/btn_shape_class1"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:text="@string/text_class_rank"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textView65"
                android:layout_width="160dp"
                android:layout_height="29dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_shape_class2"
                android:gravity="center"
                android:paddingRight="4dp"
                android:text="34            "
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/textView64"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:background="@drawable/btn_shape_class1"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="@string/text_last_class"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView65"
                app:layout_constraintStart_toStartOf="@+id/textView65"
                app:layout_constraintTop_toTopOf="@+id/textView65"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:id="@+id/contentlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_marginStart="@dimen/button_start"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        android:clickable="true"
                        android:id="@+id/notice"
                        android:onClick="goToRoutineActivity"
                        android:backgroundTint="@color/colorPrimary"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginBottom="12dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView45"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/routine"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintStart_toStartOf="parent" />

                            <ImageView
                                android:id="@+id/imageView62"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView45"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_routine" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/classview"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="@dimen/button_start"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"

                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView44"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/project"
                                android:textSize="@dimen/button_text_size"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <ImageView
                                android:id="@+id/imageView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView44"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_project" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="gotToCLassContent"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginStart="@dimen/button_start"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView43"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_class_content" />

                            <TextView
                                android:id="@+id/textView43"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_class_content"
                                android:textSize="@dimen/button_text_size"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_marginStart="@dimen/button_start"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        android:clickable="true"
                        android:id="@+id/notice2"
                        android:backgroundTint="@color/colorPrimary"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginBottom="12dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView55"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/class_test"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintStart_toStartOf="parent" />

                            <ImageView
                                android:id="@+id/imageView63"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView55"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_class_module" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:id="@+id/classview2"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="@dimen/button_start"
                        android:foreground="?selectableItemBackground"
                        app:cardCornerRadius="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"

                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView46"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/compilation"
                                android:textSize="@dimen/button_text_size"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                            <ImageView
                                android:id="@+id/imageView21"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView46"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_compilation" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/button_right_space"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginStart="@dimen/button_start"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:onClick="goToClassModule"
                                app:layout_constraintBottom_toTopOf="@+id/textView47"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_class_test" />

                            <TextView
                                android:id="@+id/textView47"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_module"
                                android:textSize="@dimen/button_text_size"
                                android:textColor="@color/white"
                                android:layout_marginBottom="@dimen/button_bottom"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/btn_shape_class"
                android:text="@string/back_to_dashboard"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingTop="6dp"
                android:paddingBottom="4dp"
                android:textSize="15sp"
                android:onClick="backToDashboard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contentlayout">

            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

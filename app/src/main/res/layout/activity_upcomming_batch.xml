<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upcomming_batch.Upcoming_batch_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_top_constraintLayout"
        android:layout_width="409dp"
        android:layout_height="152dp"
        android:background="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_Upcoming_Batch_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="127dp"
            android:text="@string/upcoming_batch"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_text_Upcoming_Batch_heading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Here Some Essential "
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/text_Upcoming_Batch_heading"
            app:layout_constraintTop_toBottomOf="@+id/text_Upcoming_Batch_heading" />

        <ImageView
            android:id="@+id/notification_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notification" />

        <ImageView
            android:id="@+id/event_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_Upcoming_Batch_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_Upcoming_Batch_heading"
            app:srcCompat="@drawable/ic_event" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_this_month_id"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/profile_button_1"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center|left"
        android:paddingLeft="25dp"
        android:text="This Month"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_top_constraintLayout" />

    <Button
        android:id="@+id/button_next_month_id"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:text="Next Month"
        android:background="@drawable/button_shape"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_this_month_id"
        app:layout_constraintEnd_toEndOf="@+id/button_this_month_id"
        app:layout_constraintTop_toTopOf="@+id/button_this_month_id" />

    <LinearLayout
        android:id="@+id/linearLayout_all_batch_id"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_this_month_id">

        <TextView
            android:id="@+id/text_all_batch_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="All Batch"
            android:textColor="@color/skyblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_graphic_design_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Graphic Design"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_web_design_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Web Design"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_video_editing_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="Video Editing"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_view_upcoming_batch_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_all_batch_id" />

</androidx.constraintlayout.widget.ConstraintLayout>
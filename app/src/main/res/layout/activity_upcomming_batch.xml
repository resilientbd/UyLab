<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upcomming_batch.Upcomming_batch_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_top_constraintLayout"
        android:layout_width="409dp"
        android:layout_height="152dp"
        android:background="#F2F2F2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_Upcoming_Batch_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="127dp"
            android:text="@string/upcoming_batch"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_text_Upcoming_Batch_heading_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Here Some Essential "
            android:textColor="@android:color/black"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="@+id/text_Upcoming_Batch_heading"
            app:layout_constraintTop_toBottomOf="@+id/text_Upcoming_Batch_heading" />

        <ImageView
            android:id="@+id/notification_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notification" />

        <ImageView
            android:id="@+id/event_icon_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_Upcoming_Batch_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_Upcoming_Batch_heading"
            app:srcCompat="@drawable/ic_event" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button14"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="54dp"
        android:paddingLeft="25dp"
        android:background="@drawable/profile_button_1"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center|left"
        android:text="This Month"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_top_constraintLayout" />

    <Button
        android:id="@+id/button15"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:text="Next Month"
        android:background="@drawable/button_shape"
        android:paddingRight="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/button14"
        app:layout_constraintEnd_toEndOf="@+id/button14"
        app:layout_constraintTop_toTopOf="@+id/button14" />
</androidx.constraintlayout.widget.ConstraintLayout>
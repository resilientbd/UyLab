<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:background="#F2F2F2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2">

            <TextView
                android:id="@+id/textView"
                android:layout_width="148dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Adnan Amhed"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/idtext"
                android:layout_width="79dp"
                android:layout_height="15dp"
                android:text="ID46855445555"
                android:textColor="#747474"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/paidamount"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/btn_shape_dashboard1"
                android:paddingRight="4dp"
                android:text="24523"
                android:textAlignment="textEnd"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="@+id/idtext"
                app:layout_constraintTop_toBottomOf="@+id/idtext" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:background="@drawable/btn_shape_dashboard2"
                android:paddingLeft="16dp"
                android:text="@string/point_text"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/paidamount"
                app:layout_constraintStart_toStartOf="@+id/paidamount"
                app:layout_constraintTop_toTopOf="@id/paidamount" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView3"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginStart="24dp"

                android:src="@drawable/image3"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="21.11dp"
            android:layout_height="25.33dp"
            android:layout_marginLeft="318.37dp"
            android:layout_marginTop="26.65dp"
            android:layout_marginRight="35.52dp"
            android:layout_marginBottom="100.02dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_notification" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:id="@+id/summeryRecycler"
        tools:listitem="@layout/item_summery_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
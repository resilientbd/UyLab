<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/routine_view_pager"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/routine_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_course_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="GD-2001"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_lab_location"
            app:layout_constraintEnd_toEndOf="@+id/routine_view_pager"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@+id/routine_view_pager"
          />

        <TextView
            android:id="@+id/txt_lab_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LAB-5"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/routine_view_pager"
            app:layout_constraintEnd_toEndOf="@+id/routine_view_pager"
            app:layout_constraintStart_toStartOf="@+id/routine_view_pager"
            app:layout_constraintTop_toTopOf="@+id/routine_view_pager" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Today (12/11/2019)"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@+id/txt_lab_location"
            app:layout_constraintStart_toStartOf="@+id/txt_lab_location"
            app:layout_constraintTop_toBottomOf="@+id/txt_lab_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>